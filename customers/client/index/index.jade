template(name="CustomersIndex")
  .row
    h2 Customer Home
        
    a.btn.btn-default(href="/customers/new") New

  .row
    .col-md-6
      table.table.table-hover.table-striped
        thead
          tr
            th Name
            th Location
            th
        tbody
          each items
            tr 
              td 
                a(href="/customers/{{_id}}") {{name}}
              td {{location}}
              td
                a.btn.btn-xs.btn-danger#del Delete
