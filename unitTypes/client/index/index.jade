template(name="UnitTypesIndex")
  .row
    h2 Unit Type Home
        
    a.btn.btn-default(href="/unitTypes/new") New

  .row
    .col-md-6
      table.table.table-hover.table-striped
        thead
          tr
            th Name
            th Asset Type
            th Cost
        tbody
          each items
            tr 
              td 
                a(href="/unitTypes/{{_id}}") {{name}}
              td {{assetType}}
              td {{formatAmount cost}}
